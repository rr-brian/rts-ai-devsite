<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="express-server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- Don't interfere with requests for node-inspector debugging -->
        <rule name="NodeInspector" patternSyntax="ECMAScript" stopProcessing="true">
          <match url="^express-server.js\/debug[\/]?" />
          <action type="None" />
        </rule>

        <!-- All URLs are mapped to the Express server -->
        <rule name="DynamicContent">
          <action type="Rewrite" url="express-server.js" />
        </rule>
      </rules>
    </rewrite>
    <iisnode 
      nodeProcessCommandLine="node.exe"
      watchedFiles="*.js"
      loggingEnabled="true" 
      debuggingEnabled="true" />
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration>