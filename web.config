<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <handlers>
      <add name="iisnode" path="minimal-server.js" verb="*" modules="iisnode" />
    </handlers>
    <rewrite>
      <rules>
        <!-- All URLs are mapped to the minimal Node.js server -->
        <rule name="DynamicContent">
          <action type="Rewrite" url="minimal-server.js" />
        </rule>
      </rules>
    </rewrite>
    <iisnode 
      nodeProcessCommandLine="node.exe"
      watchedFiles="*.js"
      loggingEnabled="true" 
      debuggingEnabled="true" />
    <httpErrors existingResponse="PassThrough" />
  </system.webServer>
</configuration>